<Window x:Class="TestApp.XMLUploader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        Title="XMLUploader" Height="441.454" Width="417.567">
    <Grid Margin="0,0,-5.2,-3.6">
        <StackPanel Orientation="Horizontal" Margin="0,0,-50,0">
            <Button x:Name="btnOpenFile" Click="btnOpenFiles_Click" Content="Upload XML" FontSize="15" Height="54" VerticalAlignment="Top" HorizontalAlignment="Right" Width="200" Background="DarkGray"/>
            <Button x:Name="btnMainScreen" Click="BtnMainScreen_Click" Content="Go back to the main screen" FontSize="15" Height="54" VerticalAlignment="Top" HorizontalAlignment="Right" Width="213" Background="DarkGray"/>
        </StackPanel>
        <DockPanel Margin="0,58,10,21" >

            <ListBox Name="lbFiles" Margin="0,10,0,10.2" Width="358" />
        </DockPanel>
    </Grid>
</Window>
